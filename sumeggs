local Players = game:GetService("Players")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local skillsGui = playerGui:WaitForChild("Skills")
local containerFrame = skillsGui:WaitForChild("Container")
local buttonsFolder = containerFrame:WaitForChild("Buttons")
local fangDanceButton = buttonsFolder:WaitForChild("Glimpse of Power")
local skillNameText = fangDanceButton:WaitForChild("SkillName")

-- Change the text and color
skillNameText.Text = "TwoFold"
skillNameText.TextColor3 = Color3.fromRGB(255, 105, 180) -- RGB values for pink

